{
  "name": "redsys-easy",
  "description": "Node JS interface for Redsys payment gateway",
  "version": "3.1.0",
  "author": "Javier Garcia <javiertury@gmail.com>",
  "license": "MIT",
  "keywords": [
    "redsys",
    "payment",
    "gateway",
    "interface",
    "tpv",
    "pos",
    "sabadell",
    "caixabank",
    "credit",
    "card",
    "webservice"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/javiertury/redsys-easy.git"
  },
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "simple-git-hooks",
    "lint": "eslint --ext js,ts .",
    "build:clean": "rimraf lib",
    "build:code": "rollup -c rollup.config.js",
    "build:api": "api-extractor run --local",
    "build": "pnpm run build:clean && pnpm run lint && pnpm run build:code && pnpm run build:api",
    "prepublishOnly": "pnpm run build",
    "docs": "api-documenter markdown --input-folder ./api/temp --output-folder ./docs",
    "release": "standard-version --dry-run && pnpm run docs && standard-version --commit-all",
    "test-unit": "jest ./src/**/*.test.ts",
    "test-integration": "jest ./test/integration/**/*.test.ts",
    "test-code": "jest",
    "test-types": "tsd",
    "test": "pnpm run test-code && pnpm run test-types"
  },
  "files": [
    "lib"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged",
    "commit-msg": "pnpx commitlint -e"
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.7",
    "base64url": "^3.0.1",
    "dayjs": "^1.9.6",
    "decimal.js": "^10.3.1",
    "fast-xml-parser": "^3.12.16",
    "node-fetch": "^2.6.1",
    "soap": "^0.35.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@koa/router": "^8.0.8",
    "@microsoft/api-documenter": "^7.13.33",
    "@microsoft/api-extractor": "^7.18.4",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@types/bluebird": "^3.5.33",
    "@types/cheerio": "^0.22.22",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.7",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.22.0",
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^7.25.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^26.6.3",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "lint-staged": "^10.5.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-typescript2": "^0.29.0",
    "simple-git-hooks": "^2.4.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.5.5",
    "tsd": "^0.13.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "./test/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.test.json"
      }
    },
    "moduleNameMapper": {
      "redsys-easy": "<rootDir>/src"
    }
  },
  "tsd": {
    "directory": "test/types",
    "compilerOptions": {
      "lib": [
        "ESNext",
        "DOM"
      ],
      "allowSyntheticDefaultImports": true
    }
  }
}
